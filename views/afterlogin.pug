doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Dashboard
    link(rel='stylesheet', href='afterlogin.css')
  body
    #welcome
      h1 Welcome
    div
      .managearticle
        h1 Hello, #{name} !
        form
          a(href='/managearticle')
            input(type='button', value='Manage Articles')
          .logout_text
            a(href='/logout')
              input(type='button', value='Logout')
    .articlesection
        h1 Read Articles
            each val in topic
                ul
                    li
                        a(href=`/gohome/${val._id}/${val.subject}`) #{val.subject} 