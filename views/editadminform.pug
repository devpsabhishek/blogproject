doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Registration
    body 
        form(action=`/Edit/${id}` method='post')
            .contactpage
                p Edited form
                .inputform
                    label.inputblock(for='email') Email
                    input#email(type='email'  name='email' value=`${email}`)
                .inputform
                    label.inputblock(for='password') Password
                    input#password(type='password' name='password' value=`${password}`)
                .inputform
                    label.inputblock(for='name') Name
                    input#name(type='text' name='name' value=`${name}`)
                .inputform
                    label.inputblock(for='address') Address
                    textarea#address(rows='2' cols='5' name='address') #{address}      
                .inputform
                    label.inputblock(for='phoneno') PhoneNo
                    input#phoneno(type='tel' name='phoneno' value=`${phoneno}`)
                .inputform
                    input#submit.submitbutton.inputblock(type='Submit' value='Submit')